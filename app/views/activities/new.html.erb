<div class="addaact text-center m-5">
  <h2>Your activity</h2>
</div>
<div class="container_new">
  <div class="information_newacti">
    <%= simple_form_for @activity do |f| %>
      <%= f.input :localisation, placeholder: 'Royal park, 1000 brussel'%>
      <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"}%>
      <%= f.input :description, placeholder: 'Jogging'%>
      <%= f.input :equipment, placeholder: 'Equipment required'%>
      <% f.input :participants, placeholder: 'Maximum number of participants'%>
      <%= f.input :duration, label: "Duration (minutes)", placeholder: 'Estimated duration'%>
      <%= f.input :level, label: "Level <br> (1:beginner 2:amateur 3:intermediate 4:upperintermediate 5:competitive)".html_safe, input_html: { min: 0, max: 4 } %>
      <%= f.association :sport, label_method: :kind %>
      <%= f.submit class: 'texttextdee' %>
    <% end %>
  </div>
</div>

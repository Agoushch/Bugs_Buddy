<h1>All sports</h1>
<%= form_tag sports_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search a sport or category"
  %>
  <div class='text-right'><%= submit_tag "Search", class: "btn button-633" %></div>
<% end %>
<div class= 'sport_container'>
  <% @sports.each do |sport| %>
    <div class="sport_card">
      <strong ><%= link_to "#{sport.kind}", sport_path(sport) %></strong>
      <%# <%= image_tag '' %>
      <%# <%= link_to "Delete", sport_path(@sport), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>
